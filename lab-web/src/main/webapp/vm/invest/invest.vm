<div id="app">
    <div class="row">
        <div class="col-lg-12">
            <!-- h1 class="page-header">投资信息</h1>-->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    投资记录
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTable">
                        <thead>
                            <tr>
                                <th>项目名称</th>
                                <th>项目类型</th>
                                <th>项目类型描述</th>
                                <th>主渠道</th>
                                <th>主渠道描述</th>
                                <th>子渠道</th>
                                <th>子渠道描述</th>
                                <th>起投日</th>
                                <th>到期日</th>
                                <th>投资金额</th>
                                <th>投资收益</th>
                                <th>年化收益率</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th colspan="9">合计</th>
                                <th></th>
                                <th></th>
                                <th> - </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <div id="confirmModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">确认提交</h4>
                    </div>
                    <div class="modal-body">
                        <p>{{confirmMsg}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                        <button type="button" class="btn btn-primary" v-click="submit()">确认</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>
</div>


